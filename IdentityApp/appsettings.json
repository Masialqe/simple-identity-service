{
  //All given field are required.
  //App configuration requires to set up ApiKey and SecretKey env values.
  "Jwt": {
    "Issuer": "identity-service",
    "Audience": "identity-customers",
    "ExpirationInMinutes": 10,
    "RefreshTokenExpireTimeInDays": 7
  },
  "UserVerification": {
    "MaxLoginAttempts": 5,
    "BlockUserExpirationTimeInMinutes": 15,
    "EnableUserManagementEndpoints": true
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=.\\LDB;Database=CustomIdentity;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "AllowedHosts": "*"
}
